<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>PatientBookAppointmentServlet</servlet-name>
        <servlet-class>controller.PatientBookAppointmentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoctorBySlotServlet</servlet-name>
        <servlet-class>controller.DoctorBySlotServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetPatientAppointmentsServlet</servlet-name>
        <servlet-class>controller.GetPatientAppointmentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientBookAppointmentServlet</servlet-name>
        <url-pattern>/PatientBookAppointmentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoctorBySlotServlet</servlet-name>
        <url-pattern>/doctor-by-slot</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetPatientAppointmentsServlet</servlet-name>
        <url-pattern>/GetPatientAppointmentsServlet</url-pattern>
    </servlet-mapping>
</web-app>
